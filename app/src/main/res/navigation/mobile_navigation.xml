<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tmdb.ui.movie.MovieFragment"
        android:label="@string/title_movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.tmdb.ui.tvshow.TVShowFragment"
        android:label="@string/title_tv_shows"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.tmdb.ui.artist.ArtistFragment"
        android:label="@string/title_artists"
        tools:layout="@layout/fragment_artist" />
</navigation>